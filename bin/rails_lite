#!/usr/bin/env ruby

require 'rails_lite'

case ARGV[0]
when "new"
  unless ARGV[1]
    puts "Please specifiy an app name ex. (rails_lite new ExampleAppName)"
  else
    RailsLite.create_app(ARGV[1])
  end
when "server"
  RailsLite.load_app
  RailsLite.start_server
when "reset_db"
  DBConnection.reset
else
  puts "Unknown command #{ARGV[0]}!!"
end
